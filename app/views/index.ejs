<!DOCTYPE HTML>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">

    <!-- JQuery -->
    <script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>
    <title>Multiroom Chat</title>
    <link href="fontawesome-free-5.12.0-web/css/all.css" rel="stylesheet">

    <!-- bootstrap - link cdn -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- estilo -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>

    <div id="demo-content">
        <section class="container">
            <section class="row">
                <div class="col-md-12 ">
                    <div class="card">
                        <div id="additional">
                         
                            <form class="form-cadastro" action="/cadastrar" method="post">
                            
                                
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="nome">Nome</label>
                                            <input type="nome"  class="form-control" id="nome" name="nm_adm" placeholder="Nome">
                                        </div>
                                 
                                        <div class="form-group">
                                            <label for="usuario" >Usuário</label>
                                            <input type="usuario"  class="form-control" id="usuario" name="ds_email" placeholder="Usuário">
                                        </div>
                                   
                                        <div class="form-group">
                                            <label for="senha" >Senha</label>
                                            <input type="password"  class="form-control" id="senha" name="cd_senha" placeholder="Password">
                                        </div>
                                    </div>
                                
                                    <button type="submit" class="btn">Confirmar cadastro</button>
                                
                                
                
                            </form>
                            
                            <input class="btn btn-block" style="background-color: #19181F; color: white;" type="submit"
                                value="Voltar para tela de login »" onclick="logar()">

                        </div>

                        <div class="general">
                            <img src="img/logo_white.png"
                                style="width: 50%;margin-left:24%;margin-top:30px;margin-bottom: -10px; ">

                            <section class="col-md-12">
                                <form accept-charset="UTF-8" role="form" class="form-signin" action="/autenticar"
                                    method="post">
                                    <fieldset>
                                        <label class="panel-login">
                                            <div class="login_result"></div>
                                        </label>
                                        <input class="form-control" placeholder="Login" name="ds_email" id="usuario"
                                            type="text">
                                        <br>
                                        <input class="form-control" placeholder="Senha" name="cd_senha" id="senha"
                                            type="text">

                                        <% if(validacao.length > 0){ %>
                                        <div class="alert alert-danger">
                                            
                                           
                                                <% for(var i = 0; i < validacao.length; i++) {%>
                                                <li><%=validacao[i].msg%></li>
                                                <% } %>
                                            
                                        </div>
                                        <% } %>
                                        <br>

                                        <button class="btn btn-block"
                                            style="background-color: rgba(230, 209, 51, 0.836); color: white;font-size: 16pt;"
                                            type="submit" id="entrar" value="Entrar " ><i class="fas fa-user-check" style="float: left;"></i>Acessar</button>

                                    </fieldset>

                                </form>

                                <br>
                                <button class="btn btn-block"
                                    style="background-color: rgba(230, 209, 51, 0.836); color: white; font-size: 16pt;"
                                    type="submit" value="Cadastrar »" onclick="cadastrar()"><i class="fas fa-user-plus"style="float: left;"></i>Cadastrar</button>
                            </section>
                        </div>

                    </div>
                </div>
            </section>
        </section>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="js/jsLogin.js"></script>
    </div>
</body>

</html>
</script>